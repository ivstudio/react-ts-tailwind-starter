        "webpack": "^5.102.1",
        "webpack-bundle-analyzer": "^4.10.2",
        "webpack-cli": "^6.0.1",
        "webpack-dev-server": "^5.2.2",
        "webpack-merge": "^6.0.1"
    },
    "engines": {
        "node": ">=22.0.0"
    }
